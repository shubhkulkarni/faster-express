{
  "name": "faster-express",
  "version": "1.0.0",
  "description": "A production-ready CLI for scaffolding resource-based Express applications with interactive prompts",
  "main": "dist/index.js",
  "bin": {
    "faster-express": "./bin/faster-express"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "release": "node scripts/release.js",
    "release:patch": "npm run release patch",
    "release:minor": "npm run release minor",
    "release:major": "npm run release major"
  },
  "keywords": [
    "express",
    "cli",
    "scaffold",
    "generator",
    "boilerplate",
    "typescript",
    "nodejs",
    "rest-api",
    "interactive",
    "mongodb",
    "postgresql",
    "prisma",
    "mongoose",
    "jwt",
    "authentication",
    "testing"
  ],
  "author": {
    "name": "Shubham Kulkarni",
    "email": "shubhamkulkarni.sh@gmail.com",
    "url": "https://github.com/shubhkulkarni"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhkulkarni/faster-express.git"
  },
  "bugs": {
    "url": "https://github.com/shubhkulkarni/faster-express/issues"
  },
  "homepage": "https://github.com/shubhkulkarni/faster-express#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "inquirer": "^9.2.11",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "ora": "^5.4.1",
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/inquirer": "^9.0.3",
    "@types/fs-extra": "^11.0.1",
    "@types/handlebars": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "bin/faster-express"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
